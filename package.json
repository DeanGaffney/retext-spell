{
  "name": "retext-spell",
  "version": "2.4.0",
  "description": "Spelling checker for retext",
  "license": "MIT",
  "keywords": [
    "spelling",
    "correct",
    "checker",
    "spell",
    "fix",
    "autocorrect",
    "retext"
  ],
  "repository": "retextjs/retext-spell",
  "bugs": "https://github.com/retextjs/retext-spell/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Josiah Sprague <josiah.sprague@gmail.com>",
    "Jan Wirth <jottenwe@gmail.com>",
    "Sylvan Swierkosz <sswierkosz@gmail.com>"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "lodash.includes": "^4.2.0",
    "nlcst-is-literal": "^1.0.0",
    "nlcst-to-string": "^2.0.0",
    "nspell": "^2.0.0",
    "quotation": "^1.1.0",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "dictionary-en-gb": "^2.0.0",
    "dictionary-en-us": "^2.0.0",
    "nyc": "^13.0.0",
    "prettier": "^1.14.3",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "retext": "^5.0.0",
    "tape": "^4.2.0",
    "tinyify": "^2.4.3",
    "xo": "^0.23.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s retextSpell > retext-spell.js",
    "build-mangle": "browserify . -s retextSpell -p tinyify > retext-spell.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-type-error": "off",
      "unicorn/no-new-buffer": "off"
    },
    "ignores": [
      "retext-spell.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
